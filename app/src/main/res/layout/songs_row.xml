<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/list_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/row_vertical_margin"
        android:layout_marginLeft="@dimen/row_horizontal_margin"
        android:layout_marginRight="@dimen/row_horizontal_margin"
        android:text="Title"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/list_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/row_horizontal_margin"
        android:layout_marginRight="@dimen/row_horizontal_margin"
        android:layout_marginBottom="@dimen/row_vertical_margin"
        android:textStyle="italic"
        android:textColor="@color/gray"
        android:text="Song"
        android:textSize="14sp" />
</LinearLayout>