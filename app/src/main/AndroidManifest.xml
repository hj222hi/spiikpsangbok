<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.bthstudent.android.psangbok" >

	<uses-permission
			android:name="android.permission.INTERNET" /> <!-- For adding songs by URL -->

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
		android:debuggable="false">
        <activity
            android:name="se.bthstudent.android.psangbok.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="se.bthstudent.android.psangbok.AboutActivity"
            android:label="@string/title_activity_about_fragment" >
        </activity>
        <activity
            android:name="se.bthstudent.android.psangbok.SongsActivity"
            android:label="@string/title_activity_songs" >
        </activity>
        <activity
            android:name="se.bthstudent.android.psangbok.ViewSongActivity"
            android:label="@string/title_activity_view_song" >
        </activity>
    </application>

</manifest>
